
@article{de_rango_grow_2010,
	title = {To {Grow} {Old} in {Southern} {Italy}: {A} {Comprehensive} {Description} of the {Old} and {Oldest} {Old} in {Calabria}},
	issn = {1423-0003},
	shorttitle = {To {Grow} {Old} in {Southern} {Italy}},
