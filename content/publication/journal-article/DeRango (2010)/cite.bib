	journal = {Gerontology},
	author = {De Rango, Francesco and Montesanto, Alberto and Berardelli, Maurizio and Mazzei, Bruno and Mari, Vincenzo and Lattanzio, Fabrizia and Corsonello, Andrea and Passarino, Giuseppe},
